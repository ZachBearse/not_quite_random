<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotQuiteRandom" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/cardview_dark_background</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="toolbarStyle">@style/Theme.NotQuiteRandom.Toolbar</item>
        <item name="actionBarTheme">@style/Theme.NotQuiteRandom.ActionBarTheme</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionOverflowButtonStyle">@style/Theme.NotQuiteRandom.overflow</item>
    </style>

    <style name="Theme.NotQuiteRandom.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary"/>

    <style name="Theme.NotQuiteRandom.ActionBarTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
        <item name="spinBars">true</item>
    </style>

    <style name="Theme.NotQuiteRandom.overflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
    </style>
</resources>